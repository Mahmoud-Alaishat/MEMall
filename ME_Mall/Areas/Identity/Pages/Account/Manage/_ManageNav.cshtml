@inject SignInManager<ME_Mall.Models.User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<style>
    .nav-link:hover {
        color: #71CD80;
    }

    .nav-link {
        font-weight: bold;
    }
</style>
    <ul class="nav nav-pills flex-row w-75 ml-3">
        <li class="nav-item mt-2"><a class="nav-link pt-3 pb-3 @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
        <li class="nav-item mt-2 "><a class="nav-link pt-3 pb-3 @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
        <li class="nav-item mt-2"><a class="nav-link pt-3 pb-3 @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
        @if (hasExternalLogins)
        {
            <li id="external-logins" class="nav-item mt-2"><a id="external-login" class="nav-link pt-3 pb-3 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
        }
        <li class="nav-item mt-2"> <a class="nav-link pt-3 pb-3 @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
        <li class="nav-item mt-2 mb-2"><a class="nav-link pt-3 pb-3 @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
    </ul>
