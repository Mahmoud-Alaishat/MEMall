@model ME_Mall.Models.Store

@{
    ViewData["Title"] = "Delete Store";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Stores /</span> Delete Store</h4>
    <div class="col-xl ">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Are you sure you want to delete this store?</h5>
                <small class="text-muted float-end">Stores</small>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StoreName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StoreName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.OwnerId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.OwnerId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CategoryId)
                    </dd>
                </dl>
                <form asp-action="DeleteStore">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Stores" class="btn btn-primary">Back</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>


