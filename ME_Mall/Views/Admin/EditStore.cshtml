@model ME_Mall.Models.Store

@{
    ViewData["Title"] = "Edit Store";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Stores /</span> Edit Store</h4>
    <div class="col-xl ">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Edit Store</h5>
                <small class="text-muted float-end">Stores</small>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="EditStore" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label class="form-label" asp-for="StoreName" for="basic-default-fullname"></label>
                        <input type="text" class="form-control" asp-for="StoreName" id="basic-default-fullname" placeholder="Enter Store Name" />
                        <span asp-validation-for="StoreName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="CategoryId" for="basic-default-fullname"></label>
                        <select class="form-select" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.message,"Id","CategoryName"))"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="OwnerId" for="basic-default-fullname"></label>
                        <select class="form-select" asp-for="OwnerId" asp-items="@(new SelectList(ViewBag.message1,"Id","FirstName"))"></select>
                        <span asp-validation-for="OwnerId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ImageFile3" for="basic-default-fullname"></label>
                        <input class="form-control" asp-for="ImageFile3" id="basic-default-fullname" accept="image/*" />
                        <span asp-validation-for="ImageFile3" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="StoreStatement" for="basic-default-fullname"></label>
                        <input type="text" class="form-control" asp-for="StoreStatement" id="basic-default-fullname" placeholder="Enter Store Name" />
                        <span asp-validation-for="StoreStatement" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <a asp-action="Stores" class="btn btn-secondary">Back</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
