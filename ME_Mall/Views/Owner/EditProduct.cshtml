@model ME_Mall.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_OwnerLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Products /</span> Edit Product</h4>
    <div class="col-xl ">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Products Form</h5>
                <small class="text-muted float-end">Products</small>
            </div>
            <div class="card-body">
                <form asp-action="EditProduct" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label class="form-label" asp-for="Name" for="basic-default-fullname"></label>
                        <input type="text" class="form-control" asp-for="Name" id="basic-default-fullname" placeholder="Enter Product Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Price" for="basic-default-fullname"></label>
                        <input type="text" class="form-control" asp-for="Price" id="basic-default-fullname" placeholder="Enter Product Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ImageFile" for="basic-default-fullname"></label>
                        <input class="form-control" asp-for="ImageFile" id="basic-default-fullname" accept="image/*"/>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Detail" for="basic-default-fullname"></label>
                        <input type="text" class="form-control" asp-for="Detail" id="basic-default-fullname" placeholder="Enter Product Details" />
                        <span asp-validation-for="Detail" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CategoryId" for="basic-default-fullname">Product Category</label>
                        <select class="form-select" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.message,"Id","SubCategoryName"))"></select>
                    </div>

                    <div class="form-group">
                        <a asp-action="Products" class="btn btn-secondary">Back</a>
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>