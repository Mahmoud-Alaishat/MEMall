@{
    ViewData["Title"] = "Order Succeeded";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Happy Shopping</p>
                    <h1>Order Succeeded</h1>
                </div>
            </div>
        </div>
    </div>
</div> <!-- end breadcrumb section --> <!-- error section -->
<div class="full-height-section error-section">
    <div class="full-height-tablecell">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="error-text">
                        @if (@ViewBag.isFirstOrder == 1 && ViewBag.isSentFeedback ==0)
                        {
                        <div class="card mt-3 mb-3">
                            <form asp-action="OrderSucceeded" method="post">
                                <label class="font-weight-bold mt-3">How did you find your experience with MEMall?</label>
                                <div class="col mb-3">
                                    <textarea type="text"
                                              id="nameWithTitle"
                                              class="form-control"
                                              rows="20"
                                              name="feedback"
                                              autofocus
                                              required>
                                    </textarea>
                                </div>
                                <button type="submit" class="cart-btn mb-4">Send</button>
                            </form>
                        </div>

                        }
                        else
                        {
                            <i style="color: #F28123 " class="fa fa-hand-holding-heart mt-4"></i>
                            <h1>Order Placed successfully</h1>
                            <p>Thank you for buying from MEMall</p>
                            <a asp-action="Index" asp-controller="Home" class="boxed-btn mb-4">Back to Home</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- end error section --> <!-- logo carousel -->
<div class="logo-carousel-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="logo-carousel-inner">
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/1.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/2.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/3.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/4.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/5.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- end logo carousel -->
