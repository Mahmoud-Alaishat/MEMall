@model ME_Mall.Models.ContactUs;
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>Get 24/7 Support</p>
                    <h1>Contact us</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- contact form -->
<div class="contact-from-section mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="form-title">
                    <h2>Have you any question?</h2>
                    <p>Don't hesitate to reach us, we would be more than happy to answer your questions</p>
                </div>
                <div id="form_status"></div>
                <div class="contact-form">
                    <form asp-action="SendMessageContactUs" method="post" id="fruitkha-contact" >
                         <input type="hidden" value="1" asp-for="ShowHide"/>
                        <p>
                            <input type="text" placeholder="Name" asp-for="Name" id="name" required>
                            <input type="email" placeholder="Email" asp-for="Email" id="email" required>
                        </p>
                        <p>
                            <input type="tel" placeholder="Phone" asp-for="Phone" id="phone" required>
                            <input type="text" placeholder="Subject" asp-for="Subject" id="subject" required>
                        </p>
                        <p><textarea asp-for="Message" id="message" cols="30" rows="10" placeholder="Message" required></textarea></p>
                        <p><input type="submit" value="Send"></p>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="contact-form-wrap">
                    <div class="contact-form-box">
                        <h4><i class="fas fa-map"></i> MEMall Address</h4>
                        <p>Jamal Al-Juqah St, <br> Boulevard,Amman <br> Jordan</p>
                    </div>
                    <div class="contact-form-box">
                        <h4><i class="far fa-clock"></i> Working Hours</h4>
                        <p>MON - FRIDAY: 8 to 10 PM <br> SAT - SUN: 10 to 8 PM </p>
                    </div>
                    <div class="contact-form-box">
                        <h4><i class="fas fa-address-book"></i> Contact</h4>
                        <p>Phone: +962781674722 <br> Email: support@memall.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end contact form -->
<!-- find our location -->
<div class="find-location blue-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <p> <i class="fas fa-map-marker-alt"></i> Find Our Location</p>
            </div>
        </div>
    </div>
</div>
<!-- end find our location -->
